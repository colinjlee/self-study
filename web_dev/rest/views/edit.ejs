<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit Blog: <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="Title" required value="<%= blog.title %>">
        </div>

        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="Image URL" required value="<%= blog.image %>">
        </div>

        <div class="field">
            <label>Body</label>
            <textarea name="blog[body]" placeholder="Body" cols="30" rows="10" required><%= blog.body %></textarea>
        </div>

        <div class="field">
            <button class="ui olive button">Submit</button>
        </div>
    </form>
</div>

<% include partials/footer %>