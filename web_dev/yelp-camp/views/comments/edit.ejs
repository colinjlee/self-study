<% include ../partials/header %>

<div class="container">
    <h1 class="text-center mb-4">Edit Comment From <%= campground.name %></h1>

    <div class="row justify-content-center">
        <form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <textarea class="form-control" name="comment[text]" cols="50" rows="10" placeholder="Body"><%= comment.text %></textarea>
            </div>

            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Submit">
            </div>

            <a class="" href="/campgrounds/<%= campground._id %>">Go Back</a>
        </form>
    </div>
</div>

<% include ../partials/footer %>