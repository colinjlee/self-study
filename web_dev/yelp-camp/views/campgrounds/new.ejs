<% include ../partials/header %>

<div class="container mb-4">
    <h1 class="text-center">Add New Campground</h1>
    
    <div class="row justify-content-center">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <label for="campground[name]">Campground Name</label>
                <input class="form-control" type="text" name="campground[name]" placeholder="Camp Name" required>
            </div>

            <div class="form-group">
                <label for="campground[price]">Price Per Night</label>
                <input class="form-control" type="number" name="campground[price]" placeholder="Price per night" required min="0.00" step="0.01">
            </div>

            <div class="form-group">
                <label for="campground[image]">Image URL</label>
                <input class="form-control" type="text" name="campground[image]" placeholder="Image URL" required>
            </div>

            <div class="form-group">
                <label for="campground[location]">Location</label>
                <input class="form-control" type="text" name="campground[location]" placeholder="Location (Optional)">
            </div>

            <div class="form-group">
                <label for="campground[website]">Website</label>
                <input class="form-control" type="text" name="campground[website]" placeholder="Website (Optional)">
            </div>

            <div class="form-group">
                <label for="campground[description]">Description</label>
                <textarea class="form-control" name="campground[description]" cols="50" rows="10" placeholder="Description" required></textarea>
            </div>

            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Add">
            </div>

            <a class="" href="/campgrounds">Go Back</a>
        </form>
    </div>
</div>

<% include ../partials/footer %>