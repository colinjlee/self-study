<% include ../partials/header %>

<div class="container mb-4">
    <h1 class="text-center">Edit Profile</h1>

    <div class="row justify-content-center">
        <form action="/users/<%= user._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="editedUser[avatar]" placeholder="Profile Picture URL" value="<%= user.avatar %>">
            </div>

            <div class="form-group">
                <input class="form-control" type="text" name="editedUser[firstName]" placeholder="First Name" value="<%= user.firstName %>">
            </div>

            <div class="form-group">
                <input class="form-control" type="text" name="editedUser[lastName]" placeholder="Last Name"
                    value="<%= user.lastName %>">
            </div>

            <div class="form-group">
                <input class="form-control" type="email" name="editedUser[email]" placeholder="Email"
                    value="<%= user.email %>">
            </div>

            <div class="form-group">
                <textarea class="form-control" name="editedUser[bio]" cols="50" rows="10"
                    placeholder="Bio"><%= user.bio %></textarea>
            </div>

            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Done">
            </div>

            <a class="" href="/users/<%= user._id %>">Go Back</a>
        </form>
    </div>
</div>

<% include ../partials/footer %>